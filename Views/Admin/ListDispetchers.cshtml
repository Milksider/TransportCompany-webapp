@model TransportCompany.Models.Dispetcher;

@{
    Layout = "_LayoutAuthorize";
    List<Dispetcher> dispetchers = ViewData["Dispetchers"] != null ? (List<Dispetcher>)ViewData["Dispetchers"] : null;
}

<h4>Список диспетчеров</h4>

<hr />

<div>
    <a asp-action="CreateDispetchers">Добавить диспетчера</a>
    <table class="table">
        <thead>
            <tr>
                <th>Фамилия</th>
                <th>Имя</th>
                <th>Отчество</th>
                <th>Email</th>
                <th>Пароль</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in dispetchers)
            {
                <tr>
                    <td>@item.Surname</td>
                    <td>@item.Name</td>
                    <td>@item.Fathername</td>
                    <td>@item.Email</td>
                    <td>@item.Password</td>
                    <td><a asp-action="DeleteDispetchers" asp-route-id="@item.Id">Удалить</a></td>
                    
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="Index">Вернуться на главную</a>
</div>