@model TransportCompany.Models.User;

<h4 class="text-center display-3" style="padding-top: 50px;">Вход</h4>

<hr />

    <div style="margin-left: auto; margin-right: auto; display: flex; flex-direction: column; align-items: center; justify-content: center; font-size: 25px">
        <form asp-action="Login" method="post" style="display: flex; flex-direction: column; font-size: 25px;">
            <label class="text-center" asp-for=" Email">Email</label>
